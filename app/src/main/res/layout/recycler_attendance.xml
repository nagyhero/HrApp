<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/r_att_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerInParent="true"
                />
            <RelativeLayout
                android:id="@+id/r_att_nameview_layout"
                android:orientation="vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/circel_shape"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                >

                <TextView
                    android:id="@+id/r_att_subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="AI"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/pop_bold"/>


            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/r_att_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/pop_regular"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/r_att_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="2 min ago"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/pop_regular"
            android:textColor="@color/custom2"
            />

        <TextView
            android:id="@+id/r_att_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="check in"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/pop_regular"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>