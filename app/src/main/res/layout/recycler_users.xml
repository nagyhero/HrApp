<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:weightSum="5"
            >

            <!--image name job-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.8"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:weightSum="5"
                android:padding="@dimen/_3sdp"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/r_users_image"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerInParent="true"
                        />
                    <RelativeLayout
                        android:id="@+id/r_users_nameview_layout"
                        android:orientation="vertical"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/circel_shape"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:id="@+id/r_users_subname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="AI"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/pop_bold"/>


                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp"
                    >

                    <TextView
                        android:id="@+id/r_users_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/pop_regular"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:id="@+id/r_users_positionname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="job title"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/pop_extra_light_italic"
                        android:textColor="@android:color/black"
                        />

                </LinearLayout>

            </LinearLayout>

            <!--more-->

            <ImageView
                android:id="@+id/r_users_more"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more2"
                android:tint="@color/custom2"
                android:layout_gravity="right"
                />

        </LinearLayout>






        <RelativeLayout
            android:id="@+id/r_users_clickcontainer"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:padding="@dimen/_5sdp"
            android:backgroundTint="@color/hollowcustom4"
            android:layout_marginHorizontal="@dimen/_10sdp"

            >
            <TextView
                android:id="@+id/r_users_clicktext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_profile"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:fontFamily="@font/pop_bold"
                android:textColor="@color/custom5"


                />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>