<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/custom4"
    app:cardCornerRadius="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"

        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:padding="@dimen/_3sdp"
            >
            <ImageView
                android:id="@+id/cont_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_3sdp"
                >
                <TextView
                    android:id="@+id/cont_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="ahmed nagy mohamed"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/pop_regular"/>

                <TextView
                    android:id="@+id/cont_position"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="position"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/pop_regular"/>


            </LinearLayout>




        </LinearLayout>

        <TextView
            android:id="@+id/cont_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Email:      "
            android:textColor="@android:color/white"
            android:fontFamily="@font/pop_regular"/>

        <TextView
            android:id="@+id/cont_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" phone:      "
            android:textColor="@android:color/white"
            android:fontFamily="@font/pop_regular"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>